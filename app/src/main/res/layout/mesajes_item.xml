<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.independenciatecnologica.chat_practica.model.Message"/>

    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginRight="20dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/messageBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:scaleType="centerCrop"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="15dp"
                bind:urlImage="@{model.urlImage}"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_name"
                android:textSize="10sp"
                android:fontFamily="@font/sfuitext_medium"
                android:text="@{model.name}"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@id/messageBackground"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_message"
                android:textSize="12sp"
                android:fontFamily="@font/ionicons"
                android:text="@{model.message}"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@id/messageBackground"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_date"
                android:textSize="10sp"
                android:fontFamily="@font/ionicons"
                android:text="@{model.time}"
                app:layout_constraintTop_toTopOf="@id/tv_name"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_message"
                app:layout_constraintRight_toRightOf="parent"
                />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</layout>

